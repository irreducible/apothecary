<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medicine_name_label"
        android:id="@+id/tvMedName"
        android:layout_above="@+id/etMedicineQty"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/etMedicineQty"
        android:layout_toStartOf="@+id/etMedicineQty" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/etMedicineName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvMedName"
        android:layout_toRightOf="@+id/tvMedName" />


    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/etMedicineQty"
        android:layout_below="@+id/etMedicineName"
        android:layout_toLeftOf="@+id/etDosePerDay"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/etDosePerDay"
        android:layout_alignTop="@+id/etMedicineQty"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medicine_qty"
        android:id="@+id/tvMedQty"
        android:layout_alignBottom="@+id/etMedicineQty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvMedName"
        android:gravity="center"
        android:layout_toStartOf="@+id/etMedicineQty"
        android:layout_toLeftOf="@+id/etMedicineQty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medicine_dose_label"
        android:id="@+id/tvMedDoses"
        android:gravity="center"
        android:layout_alignBottom="@+id/etMedicineQty"
        android:layout_below="@+id/etMedicineName"
        android:layout_toLeftOf="@+id/etDosePerDay" />
</RelativeLayout>